{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "prettier",
        "prettier/react"
    ],
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "plugins": ["react", "import", "jsx-a11y", "react-hooks"],

    "parser": "babel-eslint",

    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "react/prop-types": 0,
        "no-console": 1,
        "react-hooks/rules-of-hooks": 2,
        "react-hooks/exhaustive-deps": 1,
        "linebreak-style": ["error", "unix"]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
